%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Image
      %th Quantity
      %th Price
  -@cart.items.each do |item|
    %tr
      %td 
        = link_to item.product.name, item.product
      %td
        = image_tag item.product.image.thumb
      %td 
        = item.quantity
      %td 
        = item.total_price
%p
  = @cart.total_price